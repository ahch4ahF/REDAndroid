<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/swarm_activity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/snatches_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:tint="@color/image_view_tint"
        app:srcCompat="@drawable/ic_replay_48px"/>

    <TextView
        android:id="@+id/snatch_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/seeders_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:tint="@color/image_view_tint"
        app:srcCompat="@drawable/ic_arrow_upward_48px"/>

    <TextView
        android:id="@+id/seeders_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/leechers_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:tint="@color/image_view_tint"
        app:srcCompat="@drawable/ic_arrow_downward_48px"/>

    <TextView
        android:id="@+id/leechers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>